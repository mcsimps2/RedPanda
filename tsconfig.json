{
  "compilerOptions": {
    "lib": ["es6", "es2017", "dom"],
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "src/__tests__"
  ]
}
